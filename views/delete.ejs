<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!--FONTS-->
    <link
      href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap"
      rel="stylesheet"
    />
    <!--FONT AWESOME-->
    <script
      src="https://kit.fontawesome.com/f49c176164.js"
      crossorigin="anonymous"
    ></script>
    <!--CSS-->
    <link rel="stylesheet" href="\css\delete.css" />
    <title>Delete | BrooBlog</title>
  </head>
  <body>
    <%- include('_navbar'); %>
    <h1 id="deleteHeaderTitle">Delete article</h1>
    <section id="deleteList">
      <% articles.forEach(article => { %>
      <form action="/article/<%= article.id %>?_method=DELETE" method="POST">
        <button type="submit" id="deleteButton"><%= article.title %></button>
      </form>
      <% }) %>
    </section>
    <!--JS-->
    <script src="/js/delete.js"></script>
  </body>
</html>
